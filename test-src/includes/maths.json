{
    "maths/add": {
        "method": "POST",
        "handler": "function (req, reply) { reply((+req.body.left) + (+req.body.right)); }"
    },
    "maths/sub/{left}/{right}": {
        "method": "GET",
        "handler": "function (req, reply) { reply((+req.params.left) - (+req.params.right)); }"
    }
}